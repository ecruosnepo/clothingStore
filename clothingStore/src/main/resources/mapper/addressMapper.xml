<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.store.dao.AddressDao"> 
         
         <!-- USER ADDRESS  -->
         <update id="UpDateAddress">
            UPDATE
            address
            SET
            address1 = #{address1},
            address2 = #{address2},
            address3 = #{address3},
            address4 = #{address4}
            WHERE
            email = #{email}
         </update>
         
         <insert id="insertSubAddress">
          INSERT INTO
          address
          ( email, r_name, address1, address2, address3, address4 ) 
          VALUES
          ( #{email}, #{r_name}, #{address1}, #{address2}, #{address3}, #{address4})
         </insert>
         
          <select id="getAddressList" resultType="com.store.dto.AddressDto">
             SELECT * FROM
             address 
             WHERE 
             email = #{email}
         </select>
         
         <delete id="deleteInfoAddress">
           DELETE
           FROM
           address
           WHERE
           email = #{email}
         </delete>
         
         <select id="selectAddress" resultType="int">
             SELECT COUNT(*)
             FROM
             address 
             WHERE 
             email = #{email}
         </select>

<!--          <select id="SelectMainAddress" parameterType="String" resultType="com.store.dto.AddressDto">
             SELECT * FROM address WHERE email = #{email} and main_address = 1
         </select> -->
